<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ItemFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taskDescriptionRow"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/task_label"
                android:id="@+id/textView"
                android:layout_gravity="top" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etDescription"
                android:layout_gravity="right|top" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/taskDescriptionRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateRow"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/date_picker_label"
                android:id="@+id/textView2" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="347dp"
                android:id="@+id/datePicker"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:layout_column="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recurringRow"
            android:weightSum="1"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/recur_weekly_label"
                android:id="@+id/textView3" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchRecurring"
                android:layout_weight="0.18"
                android:textOff="off"
                android:textOn="on"
                android:textStyle="normal"
                android:textColor="@color/abc_primary_text_material_light"
                android:enabled="true"
                android:showText="true"
                android:switchMinWidth="30.0sp"
                android:switchPadding="5.0sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonRow"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_label"
                android:id="@+id/btnDelete"
                android:layout_gravity="left|bottom|center_horizontal|right" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_label"
                android:id="@+id/btnSave"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/cancel"
                android:id="@+id/btnCancel"
                android:layout_column="1"
                android:layout_gravity="bottom|right" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
